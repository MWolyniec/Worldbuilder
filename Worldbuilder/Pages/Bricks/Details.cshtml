@page
@model Worldbuilder.Pages.Bricks.DetailsModel

@{
    ViewData["Title"] = @Html.DisplayFor(model => model.Brick.Name);
}

<h1>@Html.DisplayFor(model => model.Brick.Name)</h1>

<div>
    <h4>Brick</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brick.BrickCategories)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Brick.BrickCategories != null)
            {
                @foreach (var category in Model.Brick.BrickCategories)
                {
                    <text>| </text>
                    <a asp-page="/Categories/Details" asp-route-id="@category.Category.Id">
                        @Html.DisplayFor(modelItem => category.Category.Name)
                    </a>
                    <text> |</text>
                }
            }

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brick.ShortDesc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brick.ShortDesc)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brick.Parents)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Brick.Parents != null)
            {
                @foreach (var parent in Model.Brick.Parents)
                {
                    <text> ></text>
                    <a asp-page="./Details" asp-route-id="@parent.Brick.Id">
                        @Html.DisplayFor(modelItem => parent.Brick.Name)
                    </a>
                    <text>&lt; | </text>
                }
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brick.Children)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Brick.Children != null)
            {
                @foreach (var child in Model.Brick.Children)
                {
                    <text> ></text>
                    <a asp-page="./Details" asp-route-id="@child.Child.Id">
                        @Html.DisplayFor(modelItem => child.Child.Name)
                    </a>
                    <text>&lt; | </text>
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brick.LongDesc)
        </dt>
        <dd class="col-sm-10" style="white-space: pre-line;">
            @Html.DisplayFor(model => model.Brick.LongDesc)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Brick.Id">Edit</a> |
    <a asp-page="./Delete" asp-route-id="@Model.Brick.Id">Delete</a> |
    <a asp-page="./Index">Back to List</a>
</div>
