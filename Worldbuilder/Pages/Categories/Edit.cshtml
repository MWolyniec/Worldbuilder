@page
@model Worldbuilder.Pages.Categories.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Category.Id" />
            <div class="form-group">
                <label asp-for="Category.Name" class="control-label"></label>
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.Description" class="control-label"></label>
                <textarea asp-for="Category.Description" class="form-control"></textarea>
                <span asp-validation-for="Category.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.CategoryType" class="control-label"></label>
                <br />
                @if (Model.Category.CategoryType != null)
                {
                    <text>| </text>
                    <a asp-page="/CategoryTypes/Details" asp-route-id="@Model.Category.CategoryType.Id">
                        @Html.DisplayFor(modelItem => Model.Category.CategoryType.Name, new { style = "color:red" })
                    </a>
                    <text> |</text>

                }
                <br />
                <select asp-for="CategoryTypeSelection" asp-items="Model.CategoryTypesSelectList" class="form-control" size="10"></select>
                <small class="form-text text-muted">You can choose one category type.</small>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
