@page
@model Worldbuilder.Pages.Categories.DetailsModel

@{
    ViewData["Title"] = @Html.DisplayFor(model => model.Category.Name);
}

<h1>@Html.DisplayFor(model => model.Category.Name)</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            
                @Html.DisplayNameFor(model => model.Category.CategoryType)
               
        </dt>
        <dd class="col-sm-10">
            <a asp-page="/CategoryTypes/Details" asp-route-id="@Model.Category.CategoryType.Id">
                @Html.DisplayFor(model => model.Category.CategoryType.Name)
                 </a>
</dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.BrickCategories)
        </dt>
        <dd class="col-sm-10">
            @if(Model.Category.BrickCategories != null)
            {
                @foreach(var brick in Model.Category.BrickCategories)
                {
                    <text>| </text>
                    <a asp-page="/Bricks/Details" asp-route-id="@brick.Category.Id">
                        @Html.DisplayFor(modelItem => brick.Brick.Name)
                    </a>
                    <text> |</text>
                }
            }

        </dd>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Category.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
